#!/bin/sh

SITE_NAME="resume.zach.ember.us"
THIS_DIR=`dirname $(readlink -f $0)`
cd $THIS_DIR/../$SITE_NAME".jekyll/_site"

CHROME="/Applications/Google Chrome.app/Contents/MacOS/Google Chrome"
CHROME_ARGS="--headless --no-pdf-header-footer --generate-pdf-document-outline --disable-gpu"
"$CHROME" $CHROME_ARGS --print-to-pdf=../resume.pdf index.html
"$CHROME" $CHROME_ARGS --print-to-pdf=../images/preview.pdf preview.html
cd ../images
convert preview.pdf preview.png
rm preview.pdf




